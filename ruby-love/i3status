# i3status configuration file
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
	colors = true
	color_good = "#BBBBBB"
	color_bad = "#f97f7c"
	color_degraded = "#70a2aa"
	interval = 2
}

order += "volume master"
order += "load"
order += "cpu_usage"
order += "disk /"
order += "path_exists VPN"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery 0"
order += "tztime local"
#order += "ipv6"
#order += "run_watch DHCP"
#order += "run_watch VPN"

volume master {
#	format = " ♪: %volume  "
	device = "default"
	mixer = "Master"
	mixer_idx = 0
	# termsyn font
	format = " ♪: %volume "
}

load {
#	format = " Δ: %1min "
	# termsyn font
	format = " Δ: %1min "
}

cpu_usage {
	format = " %usage "
}

cpu_temperature 0 {
	format = " ± %degrees°"
	path = "/sys/devices/platform/coretemp.0/temp2_input"
	max_threshold = 95
}

cpu_temperature 1 {
	format = "%degrees°"
	path = "/sys/devices/platform/coretemp.0/temp3_input"
	max_threshold = 95
}

cpu_temperature 2 {
	format = "%degrees°"
	path = "/sys/devices/platform/coretemp.0/temp4_input"
	max_threshold = 95
}

cpu_temperature 3 {
	format = "%degrees° "
	path = "/sys/devices/platform/coretemp.0/temp5_input"
	max_threshold = 95
}

disk "/" {
	format = " %avail "
}

disk "/media/media" {
	format = " ¨ %avail:m "
}

wireless _first_ {
        format_up = " W: (%quality at %essid) %ip "
        format_down = " Ð WiFi "
        #format_down = "W: down"
}

ethernet _first_ {
        format_up =  " %ip "
        format_down = " Ð eth0 "

        # if you use %speed, i3status requires root privileges
        #format_up = "E: %ip (%speed)"
        #format_down = "E: down"
}

run_watch DHCP {
	pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
	pidfile = "/var/run/vpnc/pid"
}

battery 0 {
    format = " %status %percentage %remaining "
    path = "/sys/class/power_supply/BAT%d/uevent"
}

tztime local {
#	format = " %h-%d %H:%M ☰ "
	# termsyn font
	#format = " %h-%d É %H:%M  ¸ ÈÈÈ È "
    format = " %h-%d %H:%M "
}
